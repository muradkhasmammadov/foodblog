            </div>

        </nav>


    </header>
    <section class="user-blog-section">
        <div class="container text-center">
            <h1>Create Your Blog</h1>
            <form action="../../Home/EditBlog/@ViewBag.blogdetails.Rows[0]["PostId"]" method="post" enctype="multipart/form-data">
                <div class="row  text-center">
                    @if (ViewBag.blogdetails != null)
                    {
                        foreach (var item in ViewBag.blogdetails.Rows)
                        {
                            <div class="blogtitle col-lg-12">
                                <input type="text" placeholder="Blog Title" name="BlogTitle" value="@ViewBag.blogdetails.Rows[0]["BlogTitle"].ToString()" autocomplete="off" required maxlength="20">
                            </div>
                            <div class="blogimg col-lg-12 mt-5 text-center">
                                <input type="file" name="BlogUrl" id="file" class="inputfile" @ViewBag.blogdetails.Rows[0]["BlogUrl"].ToString()/>
                                <label>Choose Your Blog's Image</label>
                            </div>
                            <div class="blogtext col-lg-12 mt-5 text-center">
                                <textarea name="BlogText" id="summernote" placeholder="Write your blog" @Html.Raw(ViewBag.blogdetails.Rows[0]["BlogText"].ToString())></textarea>
                            </div>
                        }
                    }
                    <div class="blogtagsandbutton publishbutton col-lg-12 mt-5 pt-5">
                        <input type="submit" name="publish" value="Update" />
                    </div>
                </div>
            </form>
        </div>
    </section>
    <br />
    <br />
    <br />
    <br />
    <script>

        $('#summernote').summernote({
            placeholder: 'Write Your Blog',
            tabsize: 2,
            height: 400,

        });

        $('.blogtags input').keyup(function () {
            if ($(this).val().length > 0) {
                $('.add-tag').show();
            }
            else {
                $('.add-tag').hide();
            }
        })

        $('.add-tag').click(function () {
            $('.tagslist ul').append(`<li><span>${$('.blogtags input').val()}</span><span class="delete-tag"><i class='fas fa-close'></i></span></li>`)
        })

        $('.delete-tag').click(function () {
            $(this).closest("li").remove();
        })
    </script>
    <script type="text/javascript" src="~/Contents/main.js"></script>
</body>
</html>