        .blogimg .inputfile {
            width: 50%;
            height: 0.1px;
            opacity: 0;
            overflow: hidden;
            position: absolute;
            border: 3px solid black;
        }

            .blogimg .inputfile + label {
                width: 50%;
                height: 40px;
                font-weight: 700;
                color: white;
                background-color: cadetblue;
                display: inline-block;
                cursor: pointer;
                padding: 6px;
            }

            .blogimg .inputfile label:hover {
                color: blue;
                cursor: pointer;
            }
    </style>
