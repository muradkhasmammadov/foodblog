    <section class="user-blog-section">
        <div class="container text-center">
            <h1>Create Your Blog</h1>
            <form action="../../Home/AddBlog" method="post" enctype="multipart/form-data">
                <div class="row text-center">
                    <div class="blogtitle col-lg-12">
                        <input type="text" placeholder="Blog Title" name="BlogTitle" autocomplete="off" required maxlength="20">
                    </div>
                    <div class="blogimg col-lg-12 mt-5 text-center">
                        <input type="file" name="BlogUrl" id="file" class="inputfile" />
                        <label>Choose Your Blog's Image</label>
                    </div>
                    <div class="blogtext col-lg-12 mt-5 text-center">
                        <textarea name="BlogText" id="summernote" placeholder="Write your blog"></textarea>
                    </div>
                    <div class="col-lg-12 mt-5">
                        <div class="row">
                            <div class="col-lg-8 col-sm-6 col-6 tagslist">
                                <ul>
                                    <li>
                                        <span>
                                            Vegan
                                        </span>
                                        <span class="delete-tag">
                                            <i class="fas fa-close"></i>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-4 col-sm-6 col-6 user-blog-social">
                                <ul>
                                    <a href="#">
                                        <li>
                                            <i class="far fa-bookmark"></i>
                                        </li>
                                    </a>
                                    <a href="#">
                                        <li>
                                            <i class="fab fa-facebook-square"></i>
                                        </li>
                                    </a>

                                    <a href="#">
                                        <li>
                                            <i class="fab fa-instagram"></i>
                                        </li>
                                    </a>

                                    <a href="#">
                                        <li>
                                            <i class="fab fa-linkedin"></i>
                                        </li>
                                    </a>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="blogtagsandbutton col-lg-12 mt-5 pt-5">
                        <div class="row">
                            <div class="col-lg-8 col-sm-6 col-6 blogtags">
                                <span>Tags::</span>
                                <input type="text" placeholder="Add tag" minlength="4" maxlength="10">
                                <span class="add-tag">
                                    <i class="fas fa-plus"></i>
                                </span>
                            </div>
                            <div class="col-lg-4 col-sm-6 col-6 publishbutton">
                                <input type="submit" name="publish" value="Publish" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <br />
    <br />
    <br />
    <br />
    <script>

        $('#summernote').summernote({
            placeholder: 'Write Your Blog',
            tabsize: 2,
            height: 400,
           
        });

        $('.blogtags input').keyup(function () {
            if ($(this).val().length > 0) {
                $('.add-tag').show();
            }
            else {
                $('.add-tag').hide();
            }
        })

        $('.add-tag').click(function () {
            $('.tagslist ul').append(`<li><span>${$('.blogtags input').val()}</span><span class="delete-tag"><i class='fas fa-close'></i></span></li>`)
        })

        $('.delete-tag').click(function () {
            $(this).closest("li").remove();
        })
    </script>
