                </ul>

            </div>

        </nav>
    </header>
    <section class="container text-center">
        @if (ViewBag.detail != null)
        {
            foreach (var item in ViewBag.detail.Rows)
            {
                <h1>@item["BlogTitle"]</h1>

            }
        }
        <div class="row ">
            @if (ViewBag.detail != null)
            {
                foreach (var item in ViewBag.detail.Rows)
                {
                    <div class="col-lg-5 details-img">
                        <img src="~/FoodImages/@item["BlogUrl"]" alt="">
                    </div>

                    <div class="col-lg-7 details-text">
                        <p>
                            @Html.Raw(item["BlogText"])
                        </p>
                    </div>
                }
            }

            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12 food-tags">
                        <ul>
                            <a href="#">
                                <span class="first-tag">Vegan</span>
                            </a>
                            <a href="#">
                                <li>Breakfast</li>
                            </a>
                            <a href="#">
                                <li>Sweety</li>
                            </a>
                            <a href="#">
                                <li>Carbohidrat</li>
                            </a>
                        </ul>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-lg-7 col-sm-6 col-6 details-likes-comments">
                        <ul>
                            <a href="#">
                                <li>
                                    <i class="far fa-thumbs-up"></i>
                                    <span>123</span>
                                </li>
                            </a>

                            <a href="#">
                                <li>
                                    <i class="far fa-comment"></i>
                                    <span>32</span>
                                </li>
                            </a>
                        </ul>
                    </div>
                    <div class="col-lg-5 col-sm-6 col-6 details-social">
                        <ul>
                            <a href="#">
                                <li>
                                    <i class="far fa-bookmark"></i>
                                </li>
                            </a>
                            <a href="#">
                                <li>
                                    <i class="fab fa-facebook-square"></i>
                                </li>
                            </a>

                            <a href="#">
                                <li>
                                    <i class="fab fa-instagram"></i>
                                </li>
                            </a>

                            <a href="#">
                                <li>
                                    <i class="fab fa-linkedin"></i>
                                </li>
                            </a>
                        </ul>
                    </div>
                </div>


                <div class="row">
                    <div class="all-comments  mt-5">
                        <div class="all-comments-inside">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12 all-comments-close">
                                        <h6>Respones[14]</h6>
                                        <a href="#">
                                            <i class="fas fa-close"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="row">
                                    @if (ViewBag.comments != null)
                                    {
                                        foreach (var item in ViewBag.comments.Rows)
                                        {
                                            <div class="col-lg-2 pt-4 all-comments-img">
                                                <img src="https://i.guim.co.uk/img/media/b68ee32677173fe677fc8a8d408634e721126f83/850_401_2104_1262/master/2104.jpg?width=1200&height=1200&quality=85&auto=format&fit=crop&s=48fde1c1bef7cbbb64d893b6bbd91ae7" alt="">
                                                <span>Sarah James</span>
                                            </div>
                                            <div class="col-lg-12 text-center all-comments-text">

                                                <p>
                                                    @item["Comment"]
                                                </p>
                                                <a href="#">Reply</a>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <form action="../../Home/Details" method="post">
                    <div class="row">
                        <div class="add-comment">
                            <textarea name="comments" id="" cols="40" placeholder="Add Your Comment" rows="10"></textarea><br>
                            <a href="#">
                                <input type="submit" value="Send" id="sendcomment">
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>



    </section>

    <footer class="mt-5 pt-5">
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="first">
                            <h4>Recpies</h4>
                            <p> Vegeterian Recpies</p>
                            <p> Vegan Recpies</p>
                            <p> Meat Recpies</p>
                            <p> Soup Recpies</p>
                            <p> Pasta Recpies</p>
                        </div>
                    </div>

                    <div class="col-md-4 col-xs-12">
                        <div class="second">
